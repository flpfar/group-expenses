<main class="signup py-5">

  <%=image_tag "logo.png", alt: "Example Image", class: "logo-image"%>

  <div class="form-container border border-light p-3">
  <p class="h5 mb-3">Sign up</p>
  <%= form_for :user, url: users_path, html: { class: 'text-center' } do |f| %>
    <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %><br>
    <%= f.submit 'Create Account', class: 'btn btn-info btn-block mb-2' %>
  <% end %>
  <%= link_to  "Login", new_session_path %>
  </div>

</main>