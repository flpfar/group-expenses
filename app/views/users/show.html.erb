<main class="profile py-5">

  <%=image_tag "logo.png", alt: current_user.username, class: "profile-image border border-light mb-2"%>
  <p class="h5 mb-5"><%= current_user.username %></p>

  <%= link_to  "All my expenses", user_expenses_path(current_user.id), class: 'btn btn-info btn-block mb-2' %>
  <%= link_to  "All my external expenses", user_expenses_path(current_user.id, external: true), class: 'btn btn-info btn-block mb-2' %>
  <%= link_to  "All groups", user_groups_path(current_user.id), class: 'btn btn-info btn-block mb-2' %>


</main>